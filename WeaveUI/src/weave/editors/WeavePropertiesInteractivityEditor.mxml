<mx:VBox xmlns="weave.editors.*" 
		 xmlns:mx="http://www.adobe.com/2006/mxml" 
		 width="100%" 
		 height="100%">
	<mx:Script>
		<![CDATA[
			import weave.api.linkBindableProperty;
			import weave.Weave;
			import weave.core.SessionManager;
		]]>
	</mx:Script>
	<mx:ViewStack id="interactivity"
				  height="100%" width="100%"
				  >
	<mx:Canvas id="admin">
		<mx:VBox>
			<mx:HBox>
				<mx:Label text="{lang('Selection')}" 
						  width="125" 
						  toolTip="{lang('Disable or enable the Selection Tool')}"/>
				
				<mx:RadioButton groupName="selection"
								buttonMode="true"
								id="selecton"
								label="{lang('On')}"
								width="50"
								creationComplete="linkBindableProperty(Weave.properties.enableToolSelection,event.target,'selected')"/>
				<mx:RadioButton groupName="selection"
								buttonMode="true"
								id="selectoff"
								label="{lang('Off')}"
								width="50"/>
			</mx:HBox>
			
			
			<mx:HBox>
				<mx:Label text="{lang('Probing')}" 
						  width="125"	
						  toolTip="{lang('Disable or enable Probing')}"/>
				
				<mx:RadioButton groupName="probing"
								buttonMode="true"
								id="probingon"
								label="{lang('On')}"
								width="50"
								creationComplete="linkBindableProperty(Weave.properties.enableToolProbe,event.target,'selected')"/>
				<mx:RadioButton groupName="probing"
								buttonMode="true"
								id="probingoff"
								label="{lang('Off')}"
								width="50"/>
			</mx:HBox>
			
			<mx:HBox>
				<mx:Label text="{lang('Right-Click')}" 
						  width="125" 
						  toolTip="{lang('Disable or enable right-clicking')}"/>
				
				<mx:RadioButton groupName="rightclick"
								buttonMode="true"
								id="rclickon"
								label="{lang('On')}"
								width="50"
								creationComplete="linkBindableProperty(Weave.properties.enableRightClick,event.target,'selected')"/>
				<mx:RadioButton groupName="rightclick"
								buttonMode="true"
								id="rclickoff"
								label="{lang('Off')}"
								width="50"/>
			</mx:HBox>
		</mx:VBox>
	</mx:Canvas>	
	<mx:Canvas id="notadmin">
		
	</mx:Canvas>
	</mx:ViewStack>
</mx:VBox>
